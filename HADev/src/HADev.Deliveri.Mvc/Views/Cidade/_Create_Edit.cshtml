
@using HADev.Delivery.Domain.Enums
@model HADev.Delivery.Domain.Models.Cidade

<div class="form-group">
    <label asp-for="EstadoId" class="control-label"></label>
    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId">
        <option selected="selected">Selecione um estado</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-primary" />&nbsp;&nbsp;&nbsp;
    <a asp-controller="Cidade" asp-action="Index" class="btn btn-default">Voltar</a>
</div>